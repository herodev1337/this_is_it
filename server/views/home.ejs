<% layout('template') -%>

<% posts.forEach(post => { %>
    <div class="container">
        <div class="container">
            <a href="/post/<%= post._id %>">
                <h2 class="post-title"><%= post.title %></h2>
                <h3 class="post-subtitle"><%= post.description %> </h3>
            </a>
            <p class="post-meta">
                Posted by
                <%= post.author %>
                on <%= post.createdAt %>
            </p>
        </div>
        </div>
        <hr class="my-4">
<% }) %>
