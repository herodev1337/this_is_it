<% layout('templates/rootTemplate') -%>

<div id="editor">
  <div class="row">
    <h1>Quiz Editor</h1>
  </div>
  <div class="row">
    <form id="quiz-form">
      <div class="row">
        <div class="form-group col-md-6">
          <div class="form-group">
            <label for="field-name">Name</label> 
            <input id="field-name" name="field-name" placeholder="required" type="text" class="form-control" required="required">
          </div>
          <div class="form-group">
            <label for="field-explanation">Instructions</label> 
            <input id="field-explanation" name="field-explanation" placeholder="optional" type="text" class="form-control">
          </div>
          <div class="form-group">
            <label>Options</label> 
            <div>
              <div class="form-check">
                <input name="check-options" id="check-options" type="checkbox" checked="checked" class="form-check-input" value="isEnabled"> 
                <label for="check-options" class="form-check-label">Enabled</label>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group col-md-6">
          <div id="new-question" class="form-group">
            <div class="card card-body" style="color: black;">
              <label for="new-question-content">Question</label>
              <input id="new-question-content" name="new-question-content" placeholder="Add a Question to your Quiz" type="text" class="form-control">
              <label for="new-question-explanation">Explanation</label>
              <input id="new-question-explanation" name="new-question-explanation" placeholder="optional" type="text" class="form-control">
              <label class="answer-collapse">Answers <i class="bi bi-caret-right-fill"></i></label>
              <div class="collapse" id="new-question-answers">
                <div class="card card-body">
                  <div id="added-answers" class="row">
                    <table class="table table-striped table-hover">
                      <thead>
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">Answer</th>
                          <th scope="col">correct</th>
                          <th scope="col">edit</th>
                        </tr>
                      </thead>
                      <tbody>
                        
                      </tbody>
                    </table>
                  </div>
                  <div id="new-question-new-answer" class="row align-items-center">
                    <div class="form-group col-sm-9">
                      <input id="new-answer-content" placeholder="Add an Answer to your Question" type="text" class="form-control">
                    </div>
                    <div class="form-group col-sm-2">
                      <input name="new-check-correct" id="new-check-correct" type="checkbox" class="form-check-input" value="isEnabled"> 
                      <label for="new-check-correct" class="form-check-label">correct</label>
                    </div>
                    <div class="form-group col-sm-1">
                      <button name="add-answer" id="add-answer" type="button" class="btn btn-primary">+</button>
                    </div>
                  </div>
                </div>
              </div>
              <button name="add-question" id="add-question" type="button" class="btn btn-primary">Add Question</button>
            </div>
          </div>
          <div id="added-questions" style="display: none;">
            <h5>Your Questions</h5>
            <div class="card card-body">

            </div>
          </div>
        </div>
      </div> 
      <div class="form-row">
        <div class="form-group">
          <button name="submit" type="submit" class="btn btn-primary">Submit Quiz</button>
        </div>
      </div>
    </form>
  </div>
</div>