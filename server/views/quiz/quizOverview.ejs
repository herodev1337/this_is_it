<% layout('templates/rootTemplate') -%>

<% quizzes.forEach(quiz => { %> 
    <a href="/quiz/<%= quiz._id %>" class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= quiz.name %></h5>
        </div>
        <p class="mb-1"><i><%= quiz.instructions %></i></p>
        <span class="badge bg-primary rounded-pill"><%= quiz.questions.length %> </span>
    </a>
<% }) %> 